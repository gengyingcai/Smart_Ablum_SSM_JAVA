<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.imooc.demo.dao.AlbumDao">
    <select id="selectAlbumByUserId" resultType="com.imooc.demo.bo.Album">
        SELECT album_name,album_cover,album_id,album_describtion
        FROM album
        WHERE album.user_id=#{id}
    </select>
    <insert id="insertAlbum"    keyProperty="album_id"
            keyColumn="album_id" parameterType="com.imooc.demo.bo.Album">
		INSERT INTO
		album
		(album_name,
		album_description,
		album_create_time,
		user_id,
		album_cover)
		VALUES
		(#{albumName}
		,#{albumDescription},
		#{albumCreateTime},
		#{userId},
		#{albumCover})
	</insert>
	<!--根据相册id查找相册名-->
	<select id="selectAlbumName" resultType="java.lang.String">
		SELECT album_name
		FROM album
		WHERE album_id=#{id}
	</select>
</mapper>
