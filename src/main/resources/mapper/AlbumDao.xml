    <select id="selectAlbumByUserId" resultType="com.imooc.demo.bo.Album">
        SELECT album_name,album_cover,album_id
        FROM album
        WHERE album.user_id=#{id}
    </select>
    <insert id="insertAlbum"    keyProperty="album_id"
            keyColumn="album_id" parameterType="com.imooc.demo.bo.Album">
		INSERT INTO
		album
		(album_name,
		album_description,
		album_create_time,
		user_id,
		album_cover)
		VALUES
		(#{albumName}
		,#{albumDescription},
		#{albumCreateTime},
		#{userId},
		#{albumCover})
	</insert>

